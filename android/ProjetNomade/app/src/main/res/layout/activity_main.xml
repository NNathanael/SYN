<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.mayron.projetnomade.MainActivity">

    <TextView
        android:id="@+id/lblRestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center_vertical|right"
        android:padding="5dp"
        android:textColor="#FF000000"
        android:text="@string/lblRestaurant"/>

    <TextView
        android:id="@+id/lblTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center_vertical|right"
        android:padding="5dp"
        android:textColor="#FF000000"
        android:text="@string/lblTable"/>

    <TextView
        android:id="@+id/textSeparator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="Votre commande"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:textStyle="bold"
        android:background="#E3F2F2"
        android:visibility="visible" />

    <TextView
        android:id="@+id/lblIngredients"
        android:layout_weight="0.9"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="#FF000000"
        android:text="@string/lblTag"/>

    <ListView
        android:id="@+id/orderItems"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_above="@+id/btnSend"
        android:layout_alignParentStart="true"
        android:dividerHeight="7dp"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:scrollbars="horizontal" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/btnSend"
        android:text="Valider la commande" />
</LinearLayout>
